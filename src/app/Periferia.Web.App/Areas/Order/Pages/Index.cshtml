@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].Identification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderModel[0].Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
